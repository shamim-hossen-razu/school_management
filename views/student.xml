                                            <span>Reporting</span>
                                        </h5>
<!--                                        <div role="menuitem" groups="project.group_project_user" class="o_kanban_task_analysis">-->
<!--                                            <a name="action_view_tasks_analysis" type="object">Tasks Analysis</a>-->
<!--                                        </div>-->
